---
import Button from './Elements/Button';
const { 
    title, 
    url, 
    img, 
    post 
} = Astro.props;

// console.log("posts: ", post.rawContent());
const a:string = post.rawContent();
---

<div class="flex flex-col justify-between">
    <div>
        <img
            src={img}
            style="width:416px; height:300px"
            class="rounded-md border"
            alt="{frontmatter.image.alt}"
        />
        <div class="flex flex-wrap mt-2">
            {
                post.frontmatter.tags?.map((tag: any) => (
                    <span class="mx-1 my-1 text-xs w-fit h-fit rounded-md bg-dark p-1 text-white">
                        {tag}
                    </span>
                ))
            }
        </div>
    </div>    
    <div class="text-dark text-[20px] font-bold mt-4"><a>{title}</a></div>
    <p class="text-sm text-[#111111] opacity-80 mt-[8px] mb-[24px]">   
        {a.slice(1,100)} . . .
    </p>

    <a href={url} class="w-fit">
        <Button className='text-xs w-fit bg-[#334]'>
            Read more
        </Button>
    </a>
</div>
