---
const { title, url, img, post } = Astro.props;

const a: string = post.rawContent();
---

<div class="flex flex-col justify-between">
    <a href={url} class="block cursor-pointer">
        <div>
            <img
                src={img}                
                class="rounded-md border sm:w-[384px] w-full h-[240px]"
                alt="{frontmatter.image.alt}"
            />
            <div class="flex flex-wrap mt-2">                
                {
                    <span class="my-1 text-xs w-fit h-fit rounded-md bg-dark py-1 text-[#CECFD2]">
                        {post.frontmatter.tags}
                    </span>
                }
            </div>
        </div>
        <div class="text-white text-[24px] font-bold"><a>{title}</a></div>
        <div class="text-[#94969C] text-base md:text-[17px]">
            {a.slice(0, 100)} . . .
        </div>
    </a>
</div>
