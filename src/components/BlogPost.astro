---
import Button from "./Elements/Button";
const { title, url, img, post } = Astro.props;

// console.log("posts: ", post.rawContent());
const a: string = post.rawContent();
---

<div class="flex flex-col justify-between">
    <a href={url} class="block">
        <div>
            <img
                src={img}
                style="width:384x; height:240px"
                class="rounded-md border"
                alt="{frontmatter.image.alt}"
            />
            <div class="flex flex-wrap mt-2">
                {
                    post.frontmatter.tags?.map((tag: any) => (
                        <span class="mx-1 my-1 text-xs w-fit h-fit rounded-md bg-dark p-1 text-[#CECFD2]">
                            {tag}
                        </span>
                    ))
                }
            </div>
        </div>
        <div class="text-white text-[20px] font-bold"><a>{title}</a></div>
        <div class="text-[#94969C] text-sm">
            {a.slice(1, 100)} . . .
        </div>
    </a>
</div>
