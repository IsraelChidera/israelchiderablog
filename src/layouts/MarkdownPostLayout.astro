---
const { frontmatter } = Astro.props;
import Container from "../components/Elements/Container";
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout pageTitle={frontmatter.title}>
    <main>
        <Container>
            
            <main class="pt-20">
                <div class="flex justify-end mb-6">
                    <a href="/blog" class="flex items-center space-x-2">
                        <svg class="w-[16px] h-[16px]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                            <path fill="#fff" d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/>
                        </svg>
                        <p>
                            back
                        </p>
                    </a>
                </div>
                <div>
                    <div class="text-center text-white">
                        <h1
                            class="text-white font-semibold text-center text-2xl md:text-5xl"
                        >
                            {frontmatter.title}
                        </h1> 
                        <p class="text-white md:text-lg">Written by <span class="italic">Israel Chidera</span></p>                      
                    </div>
                    <p class="text-sm mb-1 text-center">
                        {frontmatter.pubDate.slice(0, 10)}
                    </p>
                </div>                

                <div class="mt-2 flex items-center justify-center pb-6">
                    <img
                        src={frontmatter.image.url}
                        style="height:360px; width:720px"
                        alt={frontmatter.image.alt}
                    />
                </div>               

                <div   
                    class="prose text-white pb-20 lg:prose-xl max-w-none prose-headings:text-tertiary prose-a:text-white"                 
                >
                    <slot />
                </div>                
            </main>
        </Container>
    </main>
</BaseLayout>
